{
  "name": "solana-tamagotchi",
  "version": "1.0.0",
  "description": "Blockchain-based virtual pet game on Solana with NFT pets and Play-to-Earn mechanics",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 8000",
    "dev": "npx http-server -p 8000 -o",
    "build": "echo 'No build step required for static site'",
    "deploy": "npm run deploy:netlify",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:vercel": "vercel --prod",
    "deploy:firebase": "firebase deploy --only hosting",
    "deploy:gh-pages": "git push origin main",
    "test": "echo 'Open http://localhost:8000 to test'",
    "clean": "rm -rf .cache dist build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/solana-tamagotchi.git"
  },
  "keywords": [
    "solana",
    "blockchain",
    "nft",
    "game",
    "tamagotchi",
    "web3",
    "play-to-earn",
    "crypto",
    "virtual-pet",
    "pwa"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/solana-tamagotchi/issues"
  },
  "homepage": "https://yourusername.github.io/solana-tamagotchi",
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}

